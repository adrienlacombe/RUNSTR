# RUNSTR Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# SUPABASE (REQUIRED for competition leaderboards & workout verification)
# ==============================================================================
# Get these from Supabase Dashboard > Settings > API
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ==============================================================================
# CoinOS Lightning API Configuration
# ==============================================================================
EXPO_PUBLIC_COINOS_API_BASE=https://coinos.io/api
EXPO_PUBLIC_RUNSTR_LIGHTNING_ADDRESS=your-address@coinos.io

# ==============================================================================
# OAuth Configuration (Client IDs only - secrets go in Supabase Secrets)
# ==============================================================================
# Apple OAuth (optional)
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# Google OAuth (optional)
EXPO_PUBLIC_GOOGLE_CLIENT_ID_IOS=your-google-ios-client-id
EXPO_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=your-google-android-client-id
EXPO_PUBLIC_GOOGLE_CLIENT_ID_WEB=your-google-web-client-id

# Garmin OAuth (optional - secret stored in Supabase Secrets as GARMIN_CLIENT_SECRET)
EXPO_PUBLIC_GARMIN_CLIENT_ID=your-garmin-client-id
EXPO_PUBLIC_GARMIN_REDIRECT_URI=your-redirect-uri

# ==============================================================================
# Development
# ==============================================================================
NODE_ENV=development
SIGN_WITH=NIP07

# ==============================================================================
# IMPORTANT: Secrets that should ONLY be in Supabase Secrets (not in .env)
# ==============================================================================
# - REWARD_NWC_URL: NWC connection string for reward wallet
# - GARMIN_CLIENT_SECRET: Garmin OAuth client secret
# - SUPABASE_SERVICE_ROLE_KEY: Only needed in Edge Functions (auto-available)
